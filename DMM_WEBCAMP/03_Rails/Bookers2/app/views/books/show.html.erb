<%= flash[:notice] %>

<%# 本の詳細画面 %>

<div class="container">
<div class="row">
<div class="col-lg-4">

<%# showの画面ではidによってユーザーが変わる %>
<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<h4>name</h4>
<%= @user.name %>
<h4>introduction</h4>
<%= @user.introduction %>
<% if @user == current_user %>
<%= link_to '編集', edit_user_path(@user) %>
<% end %>

<%= render 'books/list', book: Book.new %>

</div>

<div class="col-lg-8">

<h2>Book detail</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>&nbsp</th>
      <th>&nbsp</th>
      <th>&nbsp</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>

      <tr>
        <%= link_to user_path(@book.user_id) do %>
            <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <%= @book.user.name %>
        <% end %>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%= link_to 'Edit', edit_book_path(@book), class:"btn btn-primary btn-lg" %></td>
        <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class:"btn btn-primary btn-lg" %></td>
        <% end %>
      </tr>

  </tbody>
</table>

</div>
</div>
</div>
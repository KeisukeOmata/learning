<%# 本の編集画面 %>

<h2>Editing Book</h2>

<%= form_for(@book) do |f| %>

 <% if @book.errors.any? %>
    <%= @book.errors.count %>件のerrorが発生しました
    <% @book.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
  <% end %>


  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book', class:"btn btn-primary btn-lg" %>
<% end %>


<%= link_to 'Show', book_path(@book) %>
<%= link_to 'Back', books_path %>
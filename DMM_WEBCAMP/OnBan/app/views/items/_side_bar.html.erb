<br>
<div style="padding-left: 10px; padding-bottom: 10px;">
  <%# 検索フォーム %>
  <%= form_tag(search_path,:method => 'get') do %>
    <%= text_field_tag :search, params[:search], placeholder: "CDタイトル,曲名で検索", size: 30; %><br>
    <p style="padding-top: 10px;">
      <%= submit_tag 'Search', :name => nil, class: "btn btn-info btn-sm" %>
    </p>
  <% end %>
  <%# ジャンルの商品を一覧表示 %>
  <h5 style="font-weight: bold;">ジャンル一覧</h5>
  <% categories.each do |category| %>
    <p style="padding-left: 10px;">
      <%= link_to category.category_name, search_path(category_id: category.id) %>
    <br></p>
  <% end %>
  <%# アーティストの商品を一覧表示 %>
  <h5 style="font-weight: bold;">アーティスト一覧</h5>
  <% artists.each do |artist| %>
    <p style="padding-left: 10px;">
      <%= link_to artist.artist_name, search_path(artist_id: artist.id) %>
    <br></p>
  <% end %>
</div>
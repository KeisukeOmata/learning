<div class="main users-index">
  <div class="container" style="">
    <h3 class="users-heading" style="text-align: center; padding: 20px;">ユーザー一覧</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>ユーザー名</th>
          <th>フリガナ</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.family_name %> <%= user.first_name %></td>
            <td><%= user.family_name_kana %> <%= user.first_name_kana %></td>
            <td><%= link_to "ユーザー詳細", admins_user_path(user.id), class: "btn btn-info" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users, class: "paginate" %>
  </div>
</div>
<div class="container" style="margin-bottom: 70px; text-align: center;">
  <h2 style="margin-bottom: 30px;">新規会員登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <% if resource.errors.any? %>
      <div class="alert alert-warning" role="alert">
        <h4><%= resource.errors.count %>件のerrorがあります。</h4>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <label class="col-sm control-label">お名前</label>
      <%= f.text_field :family_name, autofocus: true,  placeholder: "姓"%>
      <%= f.text_field :first_name, autofocus: true, placeholder: "名"%>
    </div>
    <div class="form-group">
      <label class="col-sm control-label">フリガナ</label>
      <%= f.text_field :family_name_kana, autofocus: true,  placeholder: "セイ"%>
      <%= f.text_field :first_name_kana, autofocus: true,  placeholder: "メイ"%>
    </div><br>
    <div class="form-group">
      <%= f.label :郵便番号〒%>
      <%= f.text_field :postal_code, autofocus: true, placeholder: "1500041", :size=>"10" %>
    </div><br>
    <div class="form-group">
      <%= f.label :住所  %>
      <%= f.text_field :street_address, autofocus: true, placeholder: "東京都渋谷区...", :size=>"60" %>
    </div><br>
    <div class="form-group">
      <%= f.label :電話番号 %>
      <%= f.text_field :phone_number, autofocus: true, placeholder: "0368694700", :size=>"15" %>
    </div>
    <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, :size=>"35" %>
    </div><br>
    <div class="form-group">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div><br>
    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div style="padding-bottom: 30px;"
      ><%= f.submit "登録", class: "btn btn-info" %>
    </div>
  <% end %>
</div>
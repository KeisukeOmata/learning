<div class="container">
  <div class="cart-container">
    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="2">&nbsp</th>
          <th colspan="2">価格</th>
          <th>個数</th>
          <th>&nbsp</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to item_path(cart_item.item_id) do %>
                <%= attachment_image_tag cart_item.item, :image, :fill, 60, 60, fallback: "/images/no_image.jpg", size: '60x60' %>
              <% end %>
            </td>
            <td>
              <%= link_to item_path(cart_item.item_id) do %>
                <%= cart_item.item.item_name %>
              <% end %>
              <%= cart_item.item.artist.artist_name %>
              <%= cart_item.item.item_price %>円
            </td>
            <td>
              <%# 単価＊個数 %>
              <%= (cart_item.items_price).to_i %>円
            </td>
            <td><br></td>
            <td>
              <%= form_for(cart_item) do |f| %>
                <%# cart_itemsコントローラーのupdateが呼ばれる %>
                <%= f.number_field :item_quantity %>
                <%= f.submit "更新する", class: "btn btn-info" %>
              <% end %>
            </td>
            <td>
              <%= link_to "削除", cart_item_path(cart_item), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-default" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="cart-item-bottom clearfix">
      <div class="line">
      </div>
      <div class="cart-item-order">
        <p>小計：<%= (current_user.total_price).to_i %>円(税込)</p>
        <p>送料：500円</p>
      </div>
      <div class="line clearfix">
      </div>
      <div class="cart-item-order">
        <p>合計：<%= (current_user.total_cost).to_i %>円</p>
      </div>
    </div>
    <br>
    <div class="order-btn">
      <%= link_to "戻る", items_path, class: "btn btn-default" %>
      <%= link_to "お会計へ進む", new_order_path, class: "btn btn-info" %>
    </div>
  </div>
</div>
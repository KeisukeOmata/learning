<%# ユーザー情報変更 %>

<h2>User info</h2>

<%= form_for(@user) do |f| %>

   <% if @user.errors.any? %>
      <%= @user.errors.count %>件のerrorが発生しました
      <% @user.errors.full_messages.each do |message| %>
          <%= message %>
      <% end %>
   <% end %>

  <h4>Name</h4>
  <%= f.text_field :name %>
  <h4>imgae</h4>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>

  <%= f.submit 'Update User', class:"btn btn-primary btn-lg" %>
<% end %>